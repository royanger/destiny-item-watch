{
   "private": true,
   "sideEffects": false,
   "scripts": {
      "build": "npm run build:tailwind && npm run build:css && npm run build:remix",
      "build:remix": "remix build",
      "build:css": "postcss styles/custom/styles.css --dir app/styles --env production",
      "build:tailwind": "npm run generate:tailwind -- --minify",
      "dev": "concurrently \"npm run dev:tailwind\" \"npm run dev:css\" \"npm run dev:remix\"",
      "dev:remix": "remix dev",
      "dev:css": "postcss styles/custom/styles.css --dir app/styles -w",
      "dev:tailwind": "npm run generate:tailwind --  --watch",
      "generate:tailwind": "tailwindcss -o ./app/styles/tailwind.css --config ./config/tailwind.config.js",
      "prisma": "npx prisma generate",
      "start": "remix-serve build"
   },
   "dependencies": {
      "@prisma/client": "^3.15.2",
      "@remix-run/node": "^1.6.0",
      "@remix-run/react": "^1.6.0",
      "@remix-run/serve": "^1.6.0",
      "@vercel/node": "^2.2.0",
      "react": "^17.0.2",
      "react-dom": "^17.0.2",
      "remix-auth": "^3.2.2",
      "remix-auth-bungie": "^1.0.5"
   },
   "devDependencies": {
      "@remix-run/dev": "^1.6.0",
      "@remix-run/eslint-config": "^1.6.0",
      "@types/node": "^18.0.0",
      "@types/react": "^17.0.45",
      "@types/react-dom": "^17.0.17",
      "autoprefixer": "^10.4.7",
      "concurrently": "^7.2.2",
      "eslint": "^8.15.0",
      "postcss": "^8.4.14",
      "postcss-cli": "^9.1.0",
      "prisma": "^3.15.2",
      "tailwindcss": "^3.1.3",
      "ts-node": "^10.8.1",
      "typescript": "^4.7.3"
   },
   "engines": {
      "node": ">=14"
   }
}
